{
	"name": "@edelman/svelte-library-template",
	"description": "A template for building sveltejs libs",
	"version": "0.0.1",
	"svelte": "index.js",
	"type": "module",
	"keywords": [
		"svelte",
		"component"
	],
	"author": {
		"name": "Michael Edelman",
		"email": "michael@edel.monster",
		"url": "https://edel.monster"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/medelman17/edel.monster.git"
	},
	"bugs": {
		"url": "https://github.com/medelman17/edel.monster/issues"
	},
	"scripts": {
		"dev": "concurrently \"pnpm run dev:lib\" \"pnpm run dev:scss\" \"pnpm run dev:storybook\"",
		"dev:lib": "svelte-kit dev",
		"dev:scss": "sass ./css/index.scss ./src/lib/css/index.css --watch",
		"dev:css": "node --loader ts-node/esm ./scripts/build-css.ts",
		"dev:storybook": "start-storybook -p 6006",
		"build": "pnpm run build:scss && pnpm run build:lib",
		"build:lib": "svelte-kit build",
		"build:scss": "rimraf ./src/lib/css && sass ./css/index.scss ./src/lib/css/index.css",
		"package": "rimraf ./package && pnpm run build:scss && svelte-kit package",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest src --config jest.config.json",
		"test:watch": "pnpm run test -- --watch",
		"test:coverage": "pnpm run test -- --coverage",
		"readme": "readme generate -i blueprint.md -c blueprint.json"
	},
	"devDependencies": {
		"@appnest/readme": "^1.2.7",
		"@babel/core": "^7.16.0",
		"@storybook/addon-a11y": "^6.3.12",
		"@storybook/addon-actions": "^6.3.12",
		"@storybook/addon-essentials": "^6.3.12",
		"@storybook/addon-links": "^6.3.12",
		"@storybook/addon-svelte-csf": "^1.1.0",
		"@storybook/builder-webpack5": "^6.3.12",
		"@storybook/manager-webpack5": "^6.3.12",
		"@storybook/svelte": "^6.3.12",
		"@sveltejs/kit": "next",
		"@testing-library/jest-dom": "^5.15.1",
		"@testing-library/svelte": "^3.0.3",
		"@types/jest": "^27.0.3",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"autoprefixer": "^10.4.0",
		"babel-loader": "^8.2.3",
		"chokidar": "^3.5.2",
		"concurrently": "^6.4.0",
		"cross-env": "^7.0.3",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"execa": "^6.0.0",
		"glob": "^7.2.0",
		"jest": "^27.3.1",
		"postcss": "^8.3.11",
		"postcss-import": "^14.0.2",
		"postcss-nesting": "^10.0.2",
		"prettier": "^2.4.1",
		"prettier-plugin-svelte": "^2.4.0",
		"rimraf": "^3.0.2",
		"sass": "^1.43.4",
		"svelte": "^3.44.2",
		"svelte-check": "^2.2.6",
		"svelte-jester": "^2.1.5",
		"svelte-loader": "^3.1.2",
		"svelte-preprocess": "^4.9.4",
		"svelte2tsx": "^0.4.10",
		"ts-jest": "^27.0.7",
		"ts-node": "^10.4.0",
		"tslib": "^2.3.1",
		"typescript": "^4.5.2"
	}
}
